{
  "name": "postgirl",
  "displayName": "postgirl",
  "description": "Secure rest client",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "postgirl",
          "title": "Postgirl",
          "icon": "$(globe)"
        }
      ]
    },
    "views": {
      "postgirl": [
        {
          "id": "postgirlSidebar",
          "name": "REST Client"
        }
      ]
    },
    "commands": [
      {
        "command": "postgirl.openRestClient",
        "title": "Open REST Client",
        "icon": "$(send)"
      },
      {
        "command": "postgirl.refreshSidebar",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "postgirl.deleteRequest",
        "title": "Delete Request",
        "icon": "$(trash)"
      },
      {
        "command": "postgirl.searchRequests",
        "title": "Search Requests",
        "icon": "$(search)"
      },
      {
        "command": "postgirl.clearSearch",
        "title": "Clear Search",
        "icon": "$(clear-all)"
      },
      {
        "command": "postgirl.addVariable",
        "title": "Add Variable",
        "icon": "$(add)"
      },
      {
        "command": "postgirl.editVariable",
        "title": "Edit Variable",
        "icon": "$(edit)"
      },
      {
        "command": "postgirl.deleteVariable",
        "title": "Delete Variable",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "postgirl.openRestClient",
          "when": "view == postgirlSidebar",
          "group": "navigation"
        },
        {
          "command": "postgirl.refreshSidebar",
          "when": "view == postgirlSidebar",
          "group": "navigation"
        },
        {
          "command": "postgirl.searchRequests",
          "when": "view == postgirlSidebar",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "postgirl.deleteRequest",
          "when": "view == postgirlSidebar && viewItem == savedRequest",
          "group": "inline"
        },
        {
          "command": "postgirl.editVariable",
          "when": "view == postgirlSidebar && viewItem == variable",
          "group": "inline"
        },
        {
          "command": "postgirl.deleteVariable",
          "when": "view == postgirlSidebar && viewItem == variable",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
